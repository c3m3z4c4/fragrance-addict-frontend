# Puerto del servidor
PORT=3000

# API Key para proteger endpoints de scraping (genera una clave segura de 32+ caracteres)
API_KEY=tu-api-key-secreta-aqui

# Base de datos PostgreSQL (usar el connection string de Dokploy)
# Formato: postgresql://usuario:password@host:puerto/database
DATABASE_URL=postgresql://perfumes_user:tu_password@perfumes-db:5432/perfumes

# Configuraci√≥n de scraping
SCRAPE_DELAY_MS=3000
MAX_CONCURRENT_SCRAPES=2

# CORS - dominios permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:5173,https://tu-frontend.com

# Entorno (development o production)
NODE_ENV=development
